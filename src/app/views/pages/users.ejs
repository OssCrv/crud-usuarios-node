<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
    <title>Jairo S.A. - Usuarios</title>
</head>
<body>

    <%- include('../partials/header'); %>

    <section class="container mt-4">
        <script>
            $(document).ready(function() {
              let dataTableLenguaje = require('../../app/utils/lenguaje');
              let options = {
                paging: true,
                language: dataTableLenguaje,
              }
                $('#example').DataTable(options);
            } );
          </script>
        <table id="example" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
            <thead>
              <tr>
                <th scope="col">Id</th>
                <th scope="col">Nombre Completo</th>
                <th scope="col">Nombre de Usuario</th>
                <th scope="col">Fecha de Creación de la cuenta</th>
                <th scope="col">Última edición a los datos</th>
                <th scope="col">Activo/a</th>
                <th scope="col">Borrar</th>
                <th scope="col">Editar</th>
            </tr>
            </thead>
            <tbody>
    
                <!-- 
    [RowDataPacket {
        cedula: 1015196651,
        full_name: 'Adrian Enrique Sanabria Mendoza',
        user_name: 'adrian',
        pass: '$2y$08$IRtTCTFE.aphzRSCDf.u5u8GjZuoAlAkVPAo/BEImfsKFhXvxLGb2',
        rol: 'CLIENT',
        date_creation: 2021-07-01T15:26:32.000Z,
        last_update: 2021-07-01T15:26:32.000Z,
        is_active: 1}] -->

            <% for(let user of userList) { %>
                    <tr>
                        <th scope="row"  align="center" valign="middle">  <%= user.cedula %> </th>
                        <td align="center" valign="middle"> <%= user.full_name %> </td>
                        <td align="center" valign="middle"> <%= user.user_name %> </td>
                        <td align="center" valign="middle"> <%= user.date_creation %> </td>
                        <td align="center" valign="middle"> <%= user.last_update %> </td>
                        <td align="center" valign="middle"> <%= user.is_active %> </td>
                        <td align="center" valign="middle"> <a href="/delete/<%= user.cedula %>" class="btn btn-danger">Borrar</a></td>
                        <td align="center" valign="middle"> <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editModal<%= user.cedula %>" data-bs-whatever="@fat">Editar</button> </td>
                    </tr>

                    <!-- Ventana Modal -->
                    <div class="modal fade" id="editModal-<%= user.cedula %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h5 class="modal-title" id="exampleModalLabel">Editar Usuario</h5>
                              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                              <form action="/edit/<%= user.cedula %>" method="POST">
                                <div class="mb-3">
                                  <label for="recipient-name" class="col-form-label">Cédula</label>
                                  <input type="text" class="form-control" id="recipient-name-<%= user.cedula %>" name="cedula" value="<%= user.cedula %>" disabled>
                                </div>
                                <div class="mb-3">
                                  <label for="message-text" class="col-form-label">Nombre Completo</label>
                                  <input class="form-control" id="message-text-<%= user.cedula %>" name="full_name" value="<%= user.full_name %>">
                                </div>
                                <div class="mb-3">
                                    <label for="message-text" class="col-form-label">Nombre de Usuario</label>
                                    <input class="form-control" id="message-text1-<%= user.cedula %>" name="user_name" value="<%= user.user_name %>">
                                  </div>
                                  <div class="mb-3">
                                    <label for="message-text" class="col-form-label">Activo/a</label>
                                    <input class="form-control" id="message-text2-<%= user.cedula %>" name="is_active" value="<%= user.is_active %>">
                                  </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                                    <input type="submit" class="btn btn-primary" value="Editar">
                                  </div>
                              </form>
                            </div>
                          </div>
                        </div>
                      </div>
            <% } %>
        </tbody>
          </table>
    </section>

</body>
</html>