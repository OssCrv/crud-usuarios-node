<head>
    <%- include('../partials/head'); %>
    <title>Log In</title>
    <link rel="stylesheet" href="/resources/css/login.css">
</head>
<body>
	
    <%- include('../partials/header'); %>

	
	<div class="wrapper">
        <form class="form-signin" method="POST" action="auth">       
